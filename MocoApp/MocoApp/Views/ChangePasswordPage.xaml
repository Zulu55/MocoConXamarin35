<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="White"
             Title="{translator:Translate lblEditPassword}"
             xmlns:translator="clr-namespace:MocoApp.Helpers;assembly=MocoApp"
             x:Class="MocoApp.Views.ChangePasswordPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="10">

                <Label Text="{translator:Translate lblNewPassword}" />
                <Entry x:Name="txtPassword" IsPassword="True" />

                <Label Text="{translator:Translate lblConfirmToPassword}" />
                <Entry x:Name="txtConfirm" IsPassword="True"  />

     



            </StackLayout>
            <Button VerticalOptions="EndAndExpand" BackgroundColor="#5862F4" TextColor="White"   HorizontalOptions="FillAndExpand" Text="{translator:Translate alertSave}" x:Name="btnAdd" Clicked="btnAdd_Clicked"     ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>