<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{translator:Translate lblAddDeliveryLocation}"
             BackgroundColor="White"
             xmlns:translator="clr-namespace:MocoApp.Helpers;assembly=MocoApp"
             x:Class="MocoApp.Views.CompanyFluxo.AddDeliveryPlacePage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <StackLayout Padding="10">

                    <Label Text="{translator:Translate lblLocalName}" />
                    <Entry x:Name="txtName" />

                </StackLayout>
                <Button VerticalOptions="EndAndExpand" BackgroundColor="#5862F4" TextColor="White"   HorizontalOptions="FillAndExpand" Text="{translator:Translate lblAdd}" x:Name="btnAdd" Clicked="btnAdd_Clicked"     ></Button>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>